{
  "include": ["src", "test"],
  "exclude": ["test/fixtures/*"],
  "compilerOptions": {
    "allowJs": true,
    "module": "ES2022",
    "target": "ES2021",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "jsx": "react",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  }
}
